{
  "name": "@bricksandbraces/arcade-components",
  "version": "1.0.2",
  "description": "The design system of the Bricks & Braces brand.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bricksandbraces/designsystem.git",
    "directory": "packages/arcade-components"
  },
  "scripts": {
    "components:generate-barrels": "barrelsby -D -d ./src --include \"src/components/.*\"",
    "components:build:local": "yarn components:build:package && yalc publish",
    "components:build:css-clean": "rimraf lib/styles && yarn components:build:css",
    "components:build:css": "postcss src/styles/index.css --ext .css --dir lib/styles/dist/ && cp -R src/styles/ lib/styles/postcss",
    "components:build:esm": "tsc --project tsconfig.esm.json",
    "components:build:cjs": "tsc --project tsconfig.cjs.json",
    "components:build:package": "rimraf lib/ && yarn components:build:esm && yarn components:build:cjs && yarn components:build:css",
    "components:test": "jest --passWithNoTests",
    "components:format:fix": "DEBUG=eslint:cli-engine eslint --fix --cache --cache-strategy content . && prettier --write . && stylelint \"**/*.?(p)css\" --fix --formatter verbose",
    "components:format:fix-complete": "DEBUG=eslint:cli-engine eslint --fix . && prettier --write . && stylelint \"**/*.?(p)css\" --fix --formatter verbose",
    "components:format:styles": "stylelint \"**/*.?(p)css\" --fix --formatter verbose",
    "components:format:check": "DEBUG=eslint:cli-engine eslint --cache --cache-strategy content . && prettier --check . && stylelint \"**/*.?(p)css\" --formatter verbose",
    "components:publish:bb": "yarn npm publish --tag latest",
    "components:publish:patch": "yarn version patch && git checkout main && git add . && git commit -m 'Automatic release' && git push && yarn build:package && yarn publish:bb",
    "components:publish:minor": "yarn version minor && git checkout main && git add . && git commit -m 'Automatic release' && git push && yarn build:package && yarn publish:bb",
    "components:publish:major": "yarn version major && git checkout main && git add . && git commit -m 'Automatic release' && git push && yarn build:package && yarn publish:bb"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "browserslist": "last 2 versions",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "react": "^18.X",
    "react-dom": "^18.X"
  },
  "dependencies": {
    "@bricksandbraces/arcade-tokens": "workspace:*",
    "@openbricksandbraces/eloguent": "^0.1.2",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-actions": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/addon-viewport": "^7.6.17",
    "@storybook/addons": "^7.6.17",
    "@storybook/api": "^7.6.17",
    "@storybook/components": "^7.6.17",
    "@storybook/core-events": "^7.6.17",
    "@storybook/csf": "^0.1.2",
    "@storybook/preview-api": "^7.6.17",
    "@storybook/preview-web": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/theming": "^7.6.17",
    "@tabler/icons-react": "^2.47.0",
    "@tippyjs/react": "^4.2.6",
    "classnames": "^2.5.1",
    "color": "^4.2.3",
    "cssnano": "^6.1.0",
    "date-fns": "^3.4.0",
    "lodash": "^4.17.21",
    "lottie-web": "^5.12.2",
    "object-hash": "^3.0.0",
    "rc-slider": "^10.5.0",
    "react-day-picker": "^8.10.0",
    "react-focus-lock": "^2.11.2",
    "react-merge-refs": "^2.1.1",
    "react-use": "^17.5.0",
    "storybook": "^7.6.17",
    "storybook-dark-mode": "^3.0.3",
    "tippy.js": "^6.3.7",
    "uuid": "^9.0.1",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/addon-styling-webpack": "^0.0.6",
    "@storybook/addon-webpack5-compiler-babel": "^2.0.0",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react-webpack5": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@types/color": "^3.0.6",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.26",
