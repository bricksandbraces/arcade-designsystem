    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "barrelsby": "^2.8.1",
    "browserslist": "^4.23.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.10.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-gfm": "^4.0.0",
