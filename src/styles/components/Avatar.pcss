@import "../theme.pcss";
@import "../typography.pcss";
@import "../prefix.pcss";

.$(prefix) {
  &--avatar {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 50%;

    &-default {
      width: $size--field-default;
      min-width: $size--field-default;
      max-width: $size--field-default;
      height: $size--field-default;
      min-height: $size--field-default;
      max-height: $size--field-default;

      & > div > .$(prefix)--avatar-container {
        width: $size--field-default;
        min-width: $size--field-default;
        max-width: $size--field-default;
        height: $size--field-default;
        min-height: $size--field-default;
        max-height: $size--field-default;
      }
    }

    &-large {
      width: $size--field-large;
      min-width: $size--field-large;
      max-width: $size--field-large;
      height: $size--field-large;
      min-height: $size--field-large;
      max-height: $size--field-large;

      & > div > .$(prefix)--avatar-container {
        width: $size--field-large;
        min-width: $size--field-large;
        max-width: $size--field-large;
        height: $size--field-large;
        min-height: $size--field-large;
        max-height: $size--field-large;
      }
    }

    &-small {
      width: $size--field-small;
      min-width: $size--field-small;
      max-width: $size--field-small;
      height: $size--field-small;
      min-height: $size--field-small;
      max-height: $size--field-small;

      & > div > .$(prefix)--avatar--container {
        width: $size--field-small;
        min-width: $size--field-small;
        max-width: $size--field-small;
        height: $size--field-small;
        min-height: $size--field-small;
        max-height: $size--field-small;
      }
    }

    &-img {
      width: 100%;
    }

    &-alt {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      background-color: $color--app-02;
      color: $white;

      & > .$(prefix)--avatar-alt__text {
        @mixin type--body-02;

        margin: 0;
        color: $color--font-text-02;
      }

      & > svg {
        width: calc($size--container-01 * 1.25);
        height: calc($size--container-01 * 1.25);
        stroke-width: 0.125rem;
        color: $color--font-text-02;
      }
    }

    &-group {
      display: inline-flex;
      align-items: center;
      margin: 0;
      padding: 0;
      list-style: none;
      gap: $size--spacing-04;

      & > .$(prefix)--avatar-group__container {
        display: inline-flex;
        & > .$(prefix)--avatar-container:not(:first-child),
        & > div:not(:first-child) > .$(prefix)--avatar-container {
          margin-left: calc($size--spacing-04 * -1);

          & > .$(prefix)--avatar {
            box-shadow: $color--app-background 0 0 0 0.1875rem;
          }
        }
      }

      &__btn {
        border-radius: $size--field-default;
      }
    }

    &-list {
      margin: 0;
      padding: 0;
      list-style: none;

      &__panel {
        width: 100%;
        max-width: max-content;
        padding: $component--padding-inside;
      }

      &__footer {
        display: flex;
        align-items: center;
        margin-top: $size--spacing-02;
        padding: $size--spacing-04;
        gap: $size--spacing-05;
      }

      &__item {
        display: flex;
        align-items: center;
        height: $size--field-large;
        max-height: $size--field-large;
        padding: 0 $size--spacing-04;
        transition: background-color $transition--app-01;
        border-radius: $component--radius-default;

        &:hover {
          background-color: $color--hover;
        }

        &-container {
          display: flex;
          align-items: center;
          justify-content: space-between;
          width: 100%;

          &--actions {
            display: flex;
            flex-wrap: nowrap;
            gap: $size--spacing-03;
          }
        }

        &-text {
          width: 100%;
          margin-right: $size--spacing-12;
          margin-left: $size--spacing-05;

          &--heading {
            @mixin type--body-02;

            width: 100%;
            max-width: calc($size--field-default * 3);
            margin: 0;
            overflow: hidden;
            color: $color--font-text-01;
            text-overflow: ellipsis;
            white-space: nowrap;
          }

          &--body {
            @mixin type--label;

            width: 100%;
            max-width: $size--container-07;
            margin: 0;
            overflow: hidden;
            color: $color--font-text-03;
            text-overflow: ellipsis;
            white-space: nowrap;
          }
        }
      }
    }
  }

  &--avatar.$(prefix)--skeleton {
    padding: 0;
  }
}
