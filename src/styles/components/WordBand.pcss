@import "../prefix.pcss";
@import "../colors.pcss";
@import "../typography.pcss";

.$(prefix) {
  &--wordband {
    padding: var(--size-spacing-05) 0;
    overflow: hidden;
    background-color: $purple-50;
    user-select: none;

    &-words {
      margin: 0;
      color: $purple-500;
      font-size: 0.75rem;
      font-weight: 200;
      letter-spacing: 0.25rem;
      text-transform: uppercase;
      white-space: nowrap;
    }
  }
}
