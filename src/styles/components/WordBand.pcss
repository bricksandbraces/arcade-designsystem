.$(prefix) {
  &--wordband {
    padding: var(--size-spacing-05) 0;
    overflow: hidden;
    background-color: var(--color-app-05);
    user-select: none;

    &-words {
      margin: 0;
      color: var(--color-app-01);
      font-size: 0.75rem;
      font-weight: 200;
      letter-spacing: 0.25rem;
      text-transform: uppercase;
      white-space: nowrap;
    }
  }
}
