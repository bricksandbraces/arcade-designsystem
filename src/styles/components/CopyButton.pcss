.copybutton {
  display: flex;
  position: relative;
  justify-content: center;
  width: max-content;

  & > button > div > .copybutton--icon {
    position: absolute;
  }
}

.copybutton.copybutton--copied > .tooltip--text {
  visibility: visible;
  opacity: 1;
}

.copybutton.copybutton--copied {
  & > button > .button--label {
    justify-content: center;
    & > span {
      visibility: hidden;
      opacity: 0;
    }
  }
}
