@import "../prefix.pcss";
@import "../theme.pcss";

.$(prefix)--loginform {
  &--email.$(prefix)--textinput--input {
    border-bottom: 0.0625rem solid transparent;
    border-radius: 0 2px;
  }
  &--password.$(prefix)--textinput--input {
    border-radius: 0 2px;
  }

  &--password {
    &-link {
      position: absolute;
      top: 11px;
      right: 40px;

      & > a {
        color: $warm-gray-80;
      }
    }
  }
}
