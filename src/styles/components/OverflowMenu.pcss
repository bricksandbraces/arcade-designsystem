.$(prefix) {
  &--overflowmenu {
    &-trigger {
      &[aria-expanded="true"] {
        background-color: var(--color-hover-light);
      }
    }
  }

  &--overflowmenu.tippy-box {
    display: inline-flex;
    flex-wrap: wrap;
    width: calc(var(--size-container-07) + var(--size-container-06));
    padding: var(--component-padding-inside);
    transition: transform var(--transition-app-01),
      opacity var(--transition-app-01), visibility var(--transition-app-01) !important;
    border: 0.0625rem solid var(--color-border);
    border-radius: var(--component-radius-default);
    background-color: var(--color-background);
    box-shadow: var(--component-shadow-default);

    &.$(prefix)--overflowmenu-light {
      border-color: var(--color-border-light);
      background-color: var(--color-background-light);

      & > .tippy-content > div > .$(prefix)--overflowmenu-item {
        background-color: var(--color-background-light);

        &:hover {
          background-color: var(--color-hover-light);
        }

        &:active {
          background-color: var(--color-active-light);
        }
      }
    }

    &.$(prefix)--overflowmenu-small
      .tippy-content
      > div
      > .$(prefix)--overflowmenu-item {
      height: var(--size-field-small);
    }

    &.$(prefix)--overflowmenu-default
      > .tippy-content
      > div
      > .$(prefix)--overflowmenu-item {
      height: var(--size-field-default);
    }

    &.$(prefix)--overflowmenu-large
      > .tippy-content
      > div
      > .$(prefix)--overflowmenu-item {
      height: var(--size-field-large);
    }

    & > .tippy-content {
      width: 100%;
      padding: 0;

      & > div {
        display: flex;
        flex-flow: column;
        gap: var(--component-padding-inside);
      }

      & > div > {
        &.$(prefix)--divider {
          min-width: calc(100% + var(--component-padding-inside) * 2);
          transform: translateX(calc(var(--component-padding-inside) * -1));
        }

        &.$(prefix)--overflowmenu-item {
          @mixin type--body-02;

          display: inline-flex;
          align-items: center;
          justify-content: flex-start;
          width: 100%;
          padding: 0 var(--size-spacing-04);
          transition: background-color var(--transition-app-01),
            border-color var(--transition-app-01);
          border: 0.0625rem solid transparent;
          border-radius: var(--component-radius-default);
          background-color: var(--color-background);
          color: var(--color-font-text-01);
          white-space: nowrap;

          & > div {
            display: inline-flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;

            & > p {
              margin: 0 var(--size-spacing-05) 0 0;
              padding: 0;
              overflow: hidden;
              text-overflow: ellipsis;
              white-space: nowrap;
            }

            & > svg {
              min-width: var(--size-container-01);
              max-width: var(--size-container-01);
              min-height: var(--size-container-01);
              max-height: var(--size-container-01);
            }
          }

          &:hover {
            background-color: var(--color-hover);
          }

          &:active {
            background-color: var(--color-active);
          }

          &:focus-visible {
            border-color: var(--color-focus);
          }

          &__danger {
            &:hover {
              background-color: var(--color-danger-hover);
            }

            &:active {
              background-color: var(--color-danger-active);
            }
          }
        }
      }
    }

    &[data-animation="bbds-animation"][data-state="hidden"] {
      transform: translateY(calc(var(--component-padding-inside) * -1));
      opacity: 0;
    }
  }
}
