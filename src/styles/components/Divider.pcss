@import "../theme.pcss";

.divider {
  margin: 0;
  border: 0;
  opacity: 1;
  background-color: currentColor;
  color: inherit;

  &--default {
    background-color: $divider-default;
  }

  &--subtle {
    background-color: $divider-subtle;
  }

  &--explicit {
    background-color: $divider-explicit;
  }

  &--thin {
    height: 1px !important;
  }

  &--thicker {
    height: 2px !important;
  }

  &--thick {
    height: 4px !important;
  }

  &--margin {
    margin: 1rem 0;
  }
}
