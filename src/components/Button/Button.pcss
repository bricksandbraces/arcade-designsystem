.button {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  min-height: 36px;
  max-height: 36px;
  padding: 0 16px;
  transition: 0.15s ease-in-out;
  border-radius: 2px;
  background-color: #000;
  color: #fff;
  font-family: "HK Grotesk", -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  font-size: 0.875rem;
}

.button.button-large {
  min-height: 48px;
  max-height: 48px;
}

.button.button-fluid {
  width: 100%;
}

.button.outline {
  border: 1px solid #4a00e0;
}

.button.outline:hover {
  border: 1px solid #3900ad;
  background-color: #103;
}

.button.outline:active {
  border: 1px solid #3900ad;
  background-color: #28007a;
}

.button.outline:focus-visible {
  border: 1px solid #fff;
  outline: 0;
}

.button.outline.button-disabled {
  border: 1px solid #262626;
  color: #404040;
  pointer-events: none;
}

.button.danger {
  border: 1px solid #e96565;
  color: #e96565;
}

.button.danger:hover {
  border: 1px solid #e96565;
  background-color: #2d0606;
}

.button.danger:active {
  border: 1px solid #e96565;
  background-color: #6b0f0f;
}

.button.danger:focus-visible {
  border: 1px solid #fff;
  outline: 0;
}

.button.danger.button-disabled {
  border: 1px solid #262626;
  color: #404040;
  pointer-events: none;
}

.button.ghost {
  border: 1px solid transparent;
  background-color: transparent;
}

.button.ghost:hover {
  border: 1px solid #103;
  background-color: #103;
}

.button.ghost:active {
  border: 1px solid #28007a;
  background-color: #28007a;
}

.button.ghost:focus-visible {
  border: 1px solid #fff;
  outline: 0;
}

.button.ghost.button-disabled {
  border: 1px solid #262626;
  background-color: #262626;
  color: #404040;
  pointer-events: none;
}

.button.primary {
  border: 1px solid #4a00e0;
  background-color: #4a00e0;
}

.button.primary:hover {
  border: 1px solid #3900ad;
  background-color: #3900ad;
}

.button.primary:active {
  border: 1px solid #28007a;
  background-color: #28007a;
}

.button.primary:focus-visible {
  border: 1px solid #fff;
  outline: 0;
}

.button.primary.button-disabled {
  border: 1px solid #262626;
  background-color: #262626;
  color: #404040;
  pointer-events: none;
}

.icon-only {
  min-width: 36px;
  max-width: 36px;
  padding: 0;
}

.icon-only.button-large {
  min-width: 48px;
  max-width: 48px;
}

.with-icon {
  padding: 0 10px;
}

.icon-only > div > svg {
  width: 16px;
  height: 16px;
  stroke-width: 2px;
}

.with-icon > div > svg {
  width: 16px;
  height: 16px;
  margin-right: 10px;
  stroke-width: 2px;
}

.button-fluid.with-icon > div > svg {
  position: absolute;
  margin-right: 0;
}

.button-fluid.with-icon.with-icon-left > div > svg {
  left: 10px;
}

.button-fluid.with-icon.with-icon-right > div > svg {
  right: 10px;
}

.spinner-border.loading {
  position: absolute;
  width: 14px;
  height: 14px;
  border: 2px solid currentColor;
  border-right-color: transparent;
}

.button-loading {
  pointer-events: none;
}

.button-hidden {
  opacity: 0;
}

.button-notallowed {
  cursor: not-allowed;
}

.button-label {
  display: flex;
  align-items: center;
}
