.snackbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 405px;
  height: 32px;
  padding: 0 5px 0 0.75rem;
  transform: translate(0, 0);
  transition: 0.15s ease-in-out;
  border: 1px solid;
  border-radius: 2px;
  opacity: 0;
  background-color: black;
  font-family: "HK Grotesk", -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  font-size: 0.75rem;
}

.snackbar-open {
  transform: translate(0, -6px);
  opacity: 1;
}

.snackbar-danger {
  border-color: #e96565;
  color: #e96565;
}

.snackbar-success {
  border-color: #83d662;
  color: #83d662;
}

.snackbar-info {
  border-color: #44b2fc;
  color: #44b2fc;
}

.snackbar-warning {
  border-color: #f2c635;
  color: #f2c635;
}

.snackbar-content {
  display: flex;
}

.snackbar-message {
  margin: 0;
  margin-left: 0.75rem;
  padding: 0;
}

.snackbar-icon {
  margin-top: 1px;
}

.snackbar-container {
  display: flex;
  position: absolute;
  bottom: 24px;
  justify-content: center;
  width: 100vw;
}

.snackbar-close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  padding: 1px;
  transition: 0.15s ease-in-out;
  border: 1px solid transparent;
  border-radius: 1px;
  outline: 0;
  background-color: #000;
  color: inherit;
}

.snackbar-close:hover {
  background-color: #262626;
}

.snackbar-close:active {
  background-color: #393939;
}

.snackbar-close:focus-visible {
  outline: 1px solid #fff;
}
