.cookiemodal {
  display: flex;

  &--buttonrow {
    display: flex;
    width: 100%;
    margin: 1rem 0 2rem 0;
  }
  &--buttonrow > div {
    margin-right: 1rem;
  }
  &--check {
    margin: 1rem 0.5rem;

    &-description {
      margin: 0 0 0 2.25rem;
      color: $warm-gray-70;
    }
  }
}

.cookiemodal--check > div > .form-check-label {
  margin-left: 0.75rem;
}
