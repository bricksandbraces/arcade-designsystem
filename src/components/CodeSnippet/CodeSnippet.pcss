.codesnippet {
  &-container {
    background-color: #0d0d0d;
    padding: 16px;
    line-height: 1.34;
    letter-spacing: 0.32px;
    position: relative;
    width: 100%;
    max-width: 48rem;
    border-radius: 2px;
    border: 1px solid #1a1a1a;

    &--overlay {
      height: 100%;
      width: 48px;
      background: linear-gradient(
        to left,
        rgba(13, 13, 13, 1),
        rgba(13, 13, 13, 0)
      );
      position: absolute;
      right: 16px;
      top: 0;
    }

    &--button {
      position: absolute;
      top: 8px;
      right: 8px;

      &__inline {
        top: 7px;
      }
    }
  }

  &-innercontainer {
    max-height: 100%;
    overflow: scroll;
    min-height: 48px;
    max-height: 240px;

    &--inline {
      min-height: 0;
    }
  }

  &-code {
    font-family: DM Mono, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
    color: white;
    font-weight: 300;
    font-size: 12px;

    &--inline {
      white-space: nowrap;
    }
  }

  &-pre {
    margin: 0;
  }
}
